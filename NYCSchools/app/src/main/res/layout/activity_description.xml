<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jon_kylesmith.nycschools.DescriptionActivity">

    <TextView
        android:id="@+id/schoolNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/overviewTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/schoolNameTextView"
        android:layout_below="@+id/schoolNameTextView"
        android:layout_marginTop="49dp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/overviewTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp">

        <TextView
            android:id="@+id/readTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:gravity="center"
            android:text="Reading: N/A" />

        <TextView
            android:id="@+id/mathTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:gravity="center"

            android:text="Math: N/A" />

        <TextView
            android:id="@+id/writingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:gravity="center"
            android:text="Writing: N/A" />
    </GridLayout>

</RelativeLayout>
